{
    "compilerOptions": {
        "outDir": "./dist/", // Configures where transpiled code is output.
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "none",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "keyofStringsOnly": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode",
        ".git",
        "dist"
    ]
}